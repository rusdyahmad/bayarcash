{
  "name": "bayarcash/php-sdk",
  "description": "A PHP client library for integrating with the Bayarcash payment gateway, supporting FPX and DuitNow.",
  "type": "library",
  "license": "MIT",
  "version": "v1.0.0",
  "keywords": [
    "payment",
    "gateway",
    "bayarcash",
    "fpx",
    "duitnow"
  ],
  "authors": [
    {
      "name": "Rusdy Ahmad",
      "email": "me@rusdy.com"
    }
  ],
  "require": {
    "php": "^7.4|^8.0|^8.1|^8.2|^8.3",
    "guzzlehttp/guzzle": "^7.0",
    "psr/log": "^1.0|^2.0|^3.0",
    "ext-json": "*"
  },
  "require-dev": {
    "illuminate/support": "^8.0|^9.0|^10.0|^11.0|^12.0",
    "mockery/mockery": "^1.6",
    "phpstan/phpstan": "^1.10",
    "phpunit/phpunit": "^9.0|^10.0",
    "squizlabs/php_codesniffer": "^3.7",
    "vlucas/phpdotenv": "^5.5"
  },
  "suggest": {
    "illuminate/support": "Required for Laravel integration via Facades"
  },
  "autoload": {
    "psr-4": {
      "Bayarcash\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Bayarcash\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Bayarcash\\Laravel\\BayarcashServiceProvider"
      ],
      "aliases": {
        "Bayarcash": "Bayarcash\\Laravel\\Facades\\Bayarcash"
      }
    }
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "scripts": {
    "test": "phpunit",
    "phpcs": "phpcs --standard=PSR12 src/",
    "phpstan": "phpstan analyse src/ --level=5"
  }
}
